ThemeDescription="Groove" # inspired by Heylove's Aesthetic Groove Visual Style (http://heylove.deviantart.com)
ThemeAuthor="urukrama"
Look=flat

RolloverButtonsSupported=1

TitleButtonsLeft="r"
TitleButtonsRight="xmi"
TitleButtonsSupported="xmir"
TitleBarHeight=18

TitleBarJustify=50

TaskBarAtTop=0

BorderSizeX=1
BorderSizeY=1
CornerSizeX=24
CornerSizeY=24
DlgBorderSizeX=1
DlgBorderSizeY=1

MenuMouseTracking=1 
ShowMenuButtonIcon=1

# theme specific colors

